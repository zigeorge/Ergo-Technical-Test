<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cv_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dim160"
    android:layout_marginBottom="@dimen/dim2"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="@dimen/dim5"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/dim10">

        <LinearLayout
            android:id="@+id/ll_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="@dimen/dim80"
                android:layout_height="@dimen/dim80"
                android:src="@drawable/progress_animation" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim10"
                android:textSize="@dimen/dimTex16"
                android:text="Ullash" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_right_statement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/loading_statement"
            android:textSize="@dimen/dimTex16"
            android:layout_below="@+id/ll_info"
            android:layout_marginLeft="@dimen/dim50"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>